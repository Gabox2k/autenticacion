<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Autenticaci贸n con JWT</title>
</head>
<body>

  <% if (!username) { %>
    <h1>Autenticaci贸n con JSON Web Token (JWT)</h1>

    <h2>Registro</h2>
    <form id="form-registro">
      <input type="text" name="username" placeholder="Usuario" required>
      <input type="password" name="password" placeholder="Contrase帽a" required>
      <button type="submit">Registrarse</button>
    </form>

    <h2>Login</h2>
    <form id="form-login">
      <input type="text" name="username" placeholder="Usuario" required>
      <input type="password" name="password" placeholder="Contrase帽a" required>
      <button type="submit">Iniciar sesi贸n</button>
    </form>

  <% } else { %>
    <h1>Bienvenido, <%= username %> </h1>

    <% if (role === "admin") { %>
      <h2>Panel de administraci贸n </h2>
      <button id="btn-cargar-usuarios">Mostrar usuarios</button>
      <div id="lista-usuarios" style="margin-top: 20px;"></div>
    <% } %>

    <button id="btn-protegido">Ir a zona protegida</button>
    <button id="btn-cerrar">Cerrar sesi贸n</button>
  <% } %>

  <pre id="resultado"></pre>

  <script>
    const resultado = document.getElementById('resultado');

    // ===== REGISTRO =====
    const formRegistro = document.getElementById('form-registro');
    if (formRegistro) {
      formRegistro.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));
        const res = await fetch('/registro', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });
        const json = await res.json();
        if (res.ok) {
          window.location.assign('/protegido');
        } else {
          resultado.textContent = 'Error:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ===== LOGIN =====
    const formLogin = document.getElementById('form-login');
    if (formLogin) {
      formLogin.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));

        const res = await fetch('/login', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const json = await res.json();

        if (res.ok) {
          if (json.role === "admin") {
            window.location.assign('/admin');
          } else {
            window.location.assign('/protegido');
          }
        } else {
          resultado.textContent = 'Error de login:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ===== ZONA PROTEGIDA =====
    const btnProtegido = document.getElementById('btn-protegido');
    if (btnProtegido) {
      btnProtegido.addEventListener('click', () => {
        window.location.assign('/protegido');
      });
    }

    // ===== CERRAR SESIN =====
    const btnCerrar = document.getElementById('btn-cerrar');
    if (btnCerrar) {
      btnCerrar.addEventListener('click', async () => {
        const res = await fetch('/cerrar', {
          method: 'POST',
          credentials: 'same-origin'
        });
        if (res.ok) {
          window.location.assign('/');
        } else {
          const json = await res.json();
          resultado.textContent = 'Error al cerrar sesi贸n:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ===== ADMIN: Cargar usuarios =====
    const lista = document.getElementById("lista-usuarios");
    const btnCargar = document.getElementById("btn-cargar-usuarios");

    if (btnCargar) {
      btnCargar.addEventListener("click", async () => {
        const res = await fetch("/admin", { credentials: "same-origin" });
        const html = await res.text();
        lista.innerHTML = html; // Renderiza la vista admin
      });
    }

    // ===== ADMIN: Hacer admin =====
    async function hacerAdmin(username) {
      const res = await fetch("/admin/role", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "same-origin",
        body: JSON.stringify({ username, newrole: "admin" })
      });
      const txt = await res.text();
      alert(txt);
    }

    // ===== ADMIN: Eliminar usuario =====
    async function eliminarUsuario(username) {
      const res = await fetch("/admin/delete", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "same-origin",
        body: JSON.stringify({ username })
      });
      const txt = await res.text();
      alert(txt);
    }
  </script>
</body>
</html>
