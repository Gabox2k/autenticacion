<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Autenticaci贸n con JWT</title>
</head>
<body>
  <% if (!username) { %>
    <h1>Autenticaci贸n con JSON Web Token (JWT)</h1>

    <h2>Registro</h2>
    <form id="form-registro">
      <input type="text" name="username" placeholder="Usuario" required>
      <input type="password" name="password" placeholder="Contrase帽a" required>
      <button type="submit">Registrarse</button>
    </form>

    <h2>Login</h2>
    <form id="form-login">
      <input type="text" name="username" placeholder="Usuario" required>
      <input type="password" name="password" placeholder="Contrase帽a" required>
      <button type="submit">Iniciar sesi贸n</button>
    </form>
  <% } else { %>
    <h1>Bienvenido, <%= username %> </h1>
    <button id="btn-protegido">Ir a zona protegida</button>
    <button id="btn-cerrar">Cerrar sesi贸n</button>
  <% } %>

  <pre id="resultado"></pre>

  <script>
    const resultado = document.getElementById('resultado');

    // ---- REGISTRO ----
    const formRegistro = document.getElementById('form-registro');
    if (formRegistro) {
      formRegistro.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));
        const res = await fetch('/registro', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin', // importante para aceptar cookie
          body: JSON.stringify(data)
        });
        const json = await res.json();
        if (res.ok) {
          // cookie ya fue seteada por el servidor; redirigimos
          window.location.href = '/protegido';
        } else {
          resultado.textContent = 'Error:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ---- LOGIN ----
    const formLogin = document.getElementById('form-login');
    if (formLogin) {
      formLogin.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));
        const res = await fetch('/login', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin', // importante para aceptar cookie
          body: JSON.stringify(data)
        });

        if (res.ok) {
          // cookie ya fue seteada por la respuesta; redirigimos al protegido
          window.location.href = '/protegido';
        } else {
          const text = await res.text();
          resultado.textContent = 'Error de login:\n' + text;
        }
      });
    }

    // ---- IR A ZONA PROTEGIDA (cuando ya est谩s logueado) ----
    const btnProtegido = document.getElementById('btn-protegido');
    if (btnProtegido) {
      btnProtegido.addEventListener('click', () => {
        window.location.href = '/protegido';
      });
    }

    // ---- CERRAR SESIN (desde / con sesi贸n activa) ----
    const btnCerrar = document.getElementById('btn-cerrar');
    if (btnCerrar) {
      btnCerrar.addEventListener('click', async () => {
        const res = await fetch('/cerrar', {
          method: 'POST',
          credentials: 'same-origin'
        });
        if (res.ok) {
          // al cerrar, volvemos a la p谩gina con login/registro
          window.location.href = '/';
        } else {
          const json = await res.json();
          resultado.textContent = 'Error al cerrar sesi贸n:\n' + JSON.stringify(json, null, 2);
        }
      });
    }
  </script>
</body>
</html>
