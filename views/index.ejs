<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Autenticaci贸n con JWT</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f0f2f5;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 0;
      padding: 20px;
    }

    h1, h2 {
      color: #333;
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      margin-bottom: 20px;
      width: 300px;
    }

    input {
      padding: 10px;
      margin: 8px 0;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }

    button {
      padding: 10px;
      margin-top: 10px;
      border: none;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background-color: #45a049;
    }

    #btn-cerrar {
      background-color: #f44336;
    }

    #lista-usuarios, pre#resultado {
      width: 300px;
      background: #fff;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      margin-top: 20px;
      white-space: pre-wrap;
    }

    .btn-container {
      display: flex;
      justify-content: space-between;
      width: 300px;
      margin-top: 20px;
    }

    .btn-row {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .btn-small {
      flex: 1;
      padding: 8px;
      font-size: 13px;
    }
  </style>
</head>
<body>

  <% if (!username) { %>
    <h1>Autenticaci贸n con JSON Web Token (JWT)</h1>

    <h2>Registro</h2>
    <form id="form-registro">
      <input type="text" name="username" placeholder="Usuario" required>
      <input type="password" name="password" placeholder="Contrase帽a" required>
      <button type="submit">Registrarse</button>
    </form>

    <h2>Login</h2>
    <form id="form-login">
      <input type="text" name="username" placeholder="Usuario" required>
      <input type="password" name="password" placeholder="Contrase帽a" required>

      <div class="btn-row">
        <button type="button" id="btn-login-cookie" class="btn-small">Login con Cookie</button>
        <button type="button" id="btn-login-jwt" class="btn-small">Login con JWT</button>
      </div>
    </form>

  <% } else { %>
    <h1>Bienvenido, <%= username %> </h1>

    <% if (role === "admin") { %>
      <h2>Panel de administraci贸n </h2>
      <button id="btn-cargar-usuarios">Mostrar usuarios</button>
      <div id="lista-usuarios"></div>
    <% } %>

    <div class="btn-container">
      <button id="btn-protegido">Ir a zona protegida</button>
      <button id="btn-cerrar">Cerrar sesi贸n</button>
    </div>
  <% } %>

  <pre id="resultado"></pre>

  <script>
    const resultado = document.getElementById('resultado');

    // ===== REGISTRO =====
    const formRegistro = document.getElementById('form-registro');
    if (formRegistro) {
      formRegistro.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));
        const res = await fetch('/registro', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });
        const json = await res.json();
        if (res.ok) {
          window.location.assign('/protegido');
        } else {
          resultado.textContent = 'Error:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ===== LOGIN CON COOKIE =====
    const btnCookie = document.getElementById("btn-login-cookie");
    if (btnCookie) {
      btnCookie.addEventListener("click", async () => {
        const form = document.getElementById("form-login");
        const data = Object.fromEntries(new FormData(form));

        const res = await fetch('/login-cookie', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const json = await res.json();
        if (res.ok) {
          if (json.role === "admin") window.location.assign('/admin');
          else window.location.assign('/protegido');
        } else {
          resultado.textContent = 'Error:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ===== LOGIN CON JWT =====
    const btnJWT = document.getElementById("btn-login-jwt");
    if (btnJWT) {
      btnJWT.addEventListener("click", async () => {
        const form = document.getElementById("form-login");
        const data = Object.fromEntries(new FormData(form));

        const res = await fetch('/login-jwt', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const json = await res.json();
        if (res.ok) {
          // guardar token en localStorage
          localStorage.setItem("token", json.token);

          // redirigir seg煤n el rol (si es admin -> /admin, sino -> /zona-jwt)
          if (json.role === "admin") {
            window.location.assign('/admin');
          } else {
            window.location.assign('/zona-jwt');
          }
        } else {
          resultado.textContent = 'Error:\n' + JSON.stringify(json, null, 2);
        }
      });
    }

    // ===== ZONA PROTEGIDA =====
    const btnProtegido = document.getElementById('btn-protegido');
    if (btnProtegido) {
      btnProtegido.addEventListener('click', () => {
        window.location.assign('/protegido');
      });
    }

    // ===== CERRAR SESIN =====
    const btnCerrar = document.getElementById('btn-cerrar');
    if (btnCerrar) {
      btnCerrar.addEventListener('click', async () => {
        localStorage.removeItem("token");
        const res = await fetch('/cerrar', {
          method: 'POST',
          credentials: 'same-origin'
        });
        if (res.ok) {
          window.location.assign('/');
        } else {
          const json = await res.json();
          resultado.textContent = 'Error al cerrar sesi贸n:\n' + JSON.stringify(json, null, 2);
        }
      });
    }
  </script>
</body>
</html>
