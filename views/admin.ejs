<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Panel de AdministraciÃ³n</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f0f2f5;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1, h2 {
      color: #333;
      text-align: center;
    }

    #lista-usuarios {
      width: 400px;
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 20px;
    }

    .user-card {
      border-radius: 10px;
      background: #fff;
      padding: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .user-info {
      font-weight: bold;
      color: #333;
    }

    .user-actions button {
      margin-left: 5px;
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: 0.2s;
    }

    .user-actions button:hover {
      opacity: 0.8;
    }

    .make-admin {
      background-color: #4CAF50;
      color: white;
    }

    .delete-user {
      background-color: #f44336;
      color: white;
    }

    a {
      margin-top: 20px;
      color: #333;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <h1>Panel de AdministraciÃ³n ðŸ‘‘</h1>
  <h2>Usuarios registrados</h2>

  <div id="lista-usuarios">
    <% users.forEach(u => { %>
      <div class="user-card">
        <span class="user-info"><%= u.username %> â€” Rol: <%= u.role %></span>
        <span class="user-actions">
          <% if (u.role !== "admin") { %>
            <button class="make-admin" onclick="hacerAdmin('<%= u.username %>')">Hacer admin</button>
          <% } %>
          <button class="delete-user" onclick="eliminarUsuario('<%= u.username %>')">Eliminar</button>
        </span>
      </div>
    <% }); %>
  </div>

  <a href="/">Volver al inicio</a>

  <script>
    
async function hacerAdmin(username) {
      const res = await fetch("/admin/makeAdmin", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "same-origin",
        body: JSON.stringify({ username, newrole: "admin" })
      });

      const txt = await res.text();
      alert(txt);
      location.reload(); // refresca para ver el cambio
    }

    async function eliminarUsuario(username) {
      const res = await fetch("/admin/eliminar", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "same-origin",
        body: JSON.stringify({ username })
      });

      const txt = await res.text();
      alert(txt);
      location.reload(); // refresca lista
    }
  </script>

</body>
</html>
